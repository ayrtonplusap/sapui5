<mvc:View xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  controllerName="zplusap.sapui5.controller.FragmentsExamples">

  <Page title="{i18n>title}" 
    showNavButton="true"
    navButtonPress="onNavBack">
    <content>
      <Button text="{i18n>openFragment}" press="onOpenUserDetailsDialog" class="sapUiSmallMargin"/>
      <Button text="{i18n>openDialog}" press="onOpenDialog" class="sapUiSmallMargin"/>
      <Button text="{i18n>openPopover}" press="onOpenPopover" class="sapUiSmallMargin"/>
      <Button text="{i18n>showMessage}" press="onShowI18nMessage" class="sapUiSmallMargin"/>
    </content>
  </Page>
  
</mvc:View>